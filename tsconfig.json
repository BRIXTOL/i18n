    "rootDir": "src",
    "outDir": "dist",
    "declarationDir": "dist",
    "declaration": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "target": "ESNext",
    "lib": ["ES2020"],
    "module": "ES6"
  }
}
